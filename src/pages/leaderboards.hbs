  width: calc(100% - 20px) ;
  padding-left:10px;
}
.main .user{
  --h: 50px;
  display:grid;
  width:100%;
  height: var(--h);
/*   background-color:black; */
  
  grid-template-columns: var(--h) var(--h) auto;
  column-gap:10px;
  margin-bottom:10px;
}
.main .user .pfp{
  height: var(--h);
}
.main .user .pfp img{
  border-radius:50%;
  border:solid 3px white;
  height:100%;
}
  
.main .user .details{
  width:100%;
  display:grid;
  grid-template-columns:2fr 1fr;
  background-image:linear-gradient(25deg,#f9c04d,#fffa7c);
  border-radius:15px;
  padding-left:8px;
  padding-right:8px;
}
.main .user .details > div{
  display:flex;
  flex-direction:column;
  font-size:1.2rem;
  justify-content: center;
  overflow:hidden;
}
</style>  
