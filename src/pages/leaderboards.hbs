<style>

table{
  display: inline-block;
  width: min(100%,400px);
}

th,td{
  padding:10px;
  border:2px solid white;
  font-size:1.2rem;
}

.index{
  position:relative;
  width:100%;
  height:100%;
}
.index:after{
  content: attr(data-count);
  position:absolute;
  top:50%;left:50%;
  font-size:1.2rem;
  height:100%;width:100%;
  color:white;
}
  
</style>
</head>
<body>
  <table border="0">
        <tr>
          <th colspan="3">ðŸŒŸ Ranked on Points ðŸŒŸ</th>
        </tr>

      {{#each points}}
        <tr>
          <td>{{@index}}</td>
          <td>{{this.username}}</td>
          <td>{{this.points}}</td>
        </tr>
      {{/each}}
  </table>
  
  <table border="0">
        <tr>
          <th colspan="3">ðŸŒ³ Ranked on Trees collected ðŸŒ³</th>
        </tr>

      {{#each collected}}
        <tr>
          <td><span class="index" data-index="{{@index}}"></span></td>
          <td>{{this.username}}</td>
          <td>{{this.collected}}</td>
        </tr>
      {{/each}}
  </table>
</body>
