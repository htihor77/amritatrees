<style>

body{
  width:100%;
  height:100%;
  background-image:linear-gradient(-45deg,#9cfaad,#42d7a9,#00a59e);
  font-family: 'Lexend Deca', sans-serif; 
}

.container{
  width:100%;
  height:calc(100% - 3rem);
  position:relative;
  background-image:url("https://www.onlygfx.com/wp-content/uploads/2019/06/6-leaf-pattern-3-1.png");
  background-repeat: repeat;
  background-size:170px;
  
  display:flex;
  flex-direction: column;
}

nav{
  display:flex;
  width:100%;
  height:3rem;
  background-image: linear-gradient(60deg, #242424,#474747);
  
    justify-content: space-between;
    align-items: center;
  
  padding-right:5px;
  
  box-shadow:0px 5px 5px rgba(0,0,0,0.5);
}
  
nav div.btn{
  height:2.5rem;
  background-color:white;
  color:black;
  border-radius:15px;
  border:3px solid yellowgreen;
  transition:all .2s;
}
nav div.btn a{
  padding:.5em;
  height:100%;
  width:100%;
  display:block;
  
  text-decoration:none;
  color:yellowgreen;
  font-weight:550;
}

nav div.btn:hover{
  transition:all .2s;
  border-radius:15px;
  background-color:transparent;
}

body .container{
  --sidePadding:10px;
  padding:15px;
/*   margin: 15px; */
/*   margin-left: 15px;
  margin-right: 15px; */
  min-height:50%;
  padding-left: var(--sidePadding);
  padding-right: var(--sidePadding);
/*   overflow:scroll; */
/*   height:400px; */
  overflow-y: scroll;
}
.container::-webkit-scrollbar{width:4px;}
.container::-webkit-scrollbar-track {background: transparent;}
.container::-webkit-scrollbar-thumb {background: #323232;}
  
.container > div{
  margin-bottom:15px;
  background-color: rgba(36,50,37,.5);
  color:white
  border-radius:15px;
  padding:15px;
}
  
.container > div.half{
  width:50%;
}
</style>
