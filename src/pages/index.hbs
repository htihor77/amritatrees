  box-shadow:0px 5px 5px rgba(0,0,0,0.5);
}
  
nav div.btn{
  height:2.5rem;
  background-color:white;
  color:black;
  border-radius:15px;
  border:3px solid yellowgreen;
  transition:all .2s;
}
nav div.btn a{
  padding:.5em;
  height:100%;
  width:100%;
  display:block;
  
  text-decoration:none;
  color:yellowgreen;
  font-weight:550;
}

nav div.btn:hover{
  transition:all .2s;
  border-radius:15px;
  background-color:transparent;
}

body .container{
  --sidePadding:25px;
/*   padding:15px; */
